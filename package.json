{
  "name": "beyond-marks",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "pnpm run build && wrangler dev --port 8787",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "studio": "drizzle-kit studio",
    "make-migrations": "drizzle-kit generate",
    "migrate:dev": "drizzle-kit migrate",
    "migrate:local": "npx wrangler d1 migrations apply marks-db",
    "migrate:prod": "npx wrangler d1 migrations apply marks-db --remote",
    "deploy": "pnpm run build && wrangler deploy",
    "cf-typegen": "wrangler types ./src/worker-configuration.d.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.36.0",
    "@internationalized/date": "^3.9.0",
    "@lucide/svelte": "^0.544.0",
    "@sveltejs/adapter-cloudflare": "^7.2.3",
    "@sveltejs/kit": "^2.43.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.6.0",
    "bits-ui": "^2.11.4",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "^5.39.7",
    "svelte-check": "^4.3.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wrangler": "^4.40.3"
  },
  "dependencies": {
    "@better-auth/cli": "^1.3.23",
    "@libsql/client": "^0.15.15",
    "better-auth": "^1.3.23",
    "drizzle-orm": "^0.44.5",
    "marked": "^16.3.0",
    "marked-katex-extension": "^5.1.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}

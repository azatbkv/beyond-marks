{
  "name": "beyond-marks",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "pnpm run build && wrangler dev --port 8787",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "studio": "drizzle-kit studio",
    "make-migrations": "drizzle-kit generate",
    "migrate:dev": "drizzle-kit migrate",
    "migrate:local": "npx wrangler d1 migrations apply marks-db",
    "migrate:prod": "npx wrangler d1 migrations apply marks-db --remote",
    "deploy": "pnpm run build && wrangler deploy",
    "cf-typegen": "wrangler types ./src/worker-configuration.d.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@internationalized/date": "^3.10.1",
    "@lucide/svelte": "^0.562.0",
    "@sveltejs/adapter-cloudflare": "^7.2.5",
    "@sveltejs/kit": "^2.49.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.9",
    "bits-ui": "^2.15.4",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "glob": "^13.0.0",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.46.4",
    "svelte-check": "^4.3.5",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "wrangler": "^4.59.2"
  },
  "dependencies": {
    "@better-auth/cli": "^1.4.13",
    "@libsql/client": "^0.17.0",
    "better-auth": "^1.4.13",
    "drizzle-orm": "^0.45.1",
    "marked": "^17.0.1",
    "marked-katex-extension": "^5.1.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
